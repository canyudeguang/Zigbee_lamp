
<main class="mdl-layout__content">
	<div class="mdl-grid container">
		<!-- breadcrumb -->
		{{> breadcrumb crumbs=crumbs }}
					
		<div class="mdl-cell mdl-cell--12-col mdl-color--white mdl-shadow--4dp">			
			<!-- Device data tabs -->
			<div class="mdl-grid mdl-cell mdl-cell--12-col  mdl-color--grey-200 mdl-shadow--2dp">
				<div class=" mdl-cell mdl-cell--5-col">
					<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label getmdl-select getmdl-select__fix-height deviceSelect">
						<input type="text" value="" class="mdl-textfield__input" id="DeviceId" readonly>
						<input type="hidden" value="li.textContent" name="DeviceId"> 
						<i class="mdl-icon-toggle__label material-icons">keyboard_arrow_down</i>       
						<label for="DeviceId" class="mdl-textfield__label">Select Device ID</label>
						<ul id="deviceList" for="DeviceId" class="mdl-menu mdl-menu--bottom-left mdl-js-menu">
								
						</ul>
					</div>
				</div>
			
				<div class=" mdl-cell mdl-cell--5-col">
					<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label getmdl-select getmdl-select__fix-height">
						<input type="text" value="" class="mdl-textfield__input" id="sensor" readonly>
						<input type="hidden" value="" name="sensor"> 
						<i class="mdl-icon-toggle__label material-icons">keyboard_arrow_down</i>       
						<label for="sensor" class="mdl-textfield__label">Select Sensor</label>
						<ul for="sensor" class="mdl-menu mdl-menu--bottom-left mdl-js-menu">							
								<li class="mdl-menu__item" data-val="temperature" data-selected="true">Temperature</li>
								<li class="mdl-menu__item" data-val="ambient">Ambient</li>
								<li class="mdl-menu__item" data-val="pressure">Pressure</li>
								<li class="mdl-menu__item" data-val="humidity">Humidity</li>
								<li class="mdl-menu__item" data-val="accelerometer">Accelerometer</li>
								<li class="mdl-menu__item" data-val="compass">Compass</li>
								<li class="mdl-menu__item" data-val="gyroscope">Gyroscope</li>
						</ul>
					</div>
				</div>

				<div class="mdl-cell mdl-cell--2-col loadButton">
					<button class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored" onclick="liveGraph()">
						Load Graph
					</button>				
				</div>			 
		</div>

		<div class="mdl-cell mdl-cell--12-col mdl-grid " id="chartsDiv" style="clear:both;"> </div>   
		</div>		
	</div>
</main>		



<!-- Plotly Charts Import-->
<script src="https://cdn.plot.ly/plotly-latest.min.js"></script>
<script src="/js/live_data.js"></script>
