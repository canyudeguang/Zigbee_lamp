<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/irisBlue</item>
    </style>


    <style name="textViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

    </style>


    <style name="textViewRowStyle" parent="textViewStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:padding">3dp</item>
    </style>



    <style name="irisBlueButtonStyle" parent="textViewStyle">
        <item name="android:background">@drawable/iris_blue_button</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="whiteButtonStyle" parent="irisBlueButtonStyle">
        <item name="android:background">@drawable/white_button</item>
    </style>


</resources>
